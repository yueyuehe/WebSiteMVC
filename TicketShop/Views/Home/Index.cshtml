            </f7-view>
        </f7-views>

    </div>
    <!-- Path to Vue js -->
    <script src="~/Scripts/vue.min.js"></script>
    <!-- Path to Framework7 Library JS-->
    <script src="~/Scripts/framework7.min.js"></script>
    <!-- Path to Framework7 Vue Plugin -->
    <script src="~/Scripts/framework7-vue.min.js"></script>
    <!-- Path to your app js where you init your app-->
    <script src="~/Scripts/my-app.js"></script>
    <script>
        // First of all, we need to initialize/enable Framework7 Vue plugin:
        Vue.use(Framework7Vue);
        // Init Vue App
        var app = new Vue({
            // App Root Element
            el: '#app',
            // Init Framework7. All Framework7 parameters should be passed in "framework7" property, e.g.:
            framework7: {
                // App Root Element, should be the same as the component root "el"
                root: '#app',
                // Array with app routes

                // Any other parameters, e.g.
                animateNavBackIcon: true,
                swipePanel: 'left'
            },
            // App root data
